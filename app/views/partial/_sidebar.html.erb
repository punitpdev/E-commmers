<% if user_signed_in? && current_user.role.to_s == "admin" %>
  <div class="min-h-screen inset-y-0 left-0 w-64 bg-white shadow-md border-r border-gray-200 transition-transform duration-300 transform md:translate-x-0 md:relative z-50">
    <div class="mt-auto">
      <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center gap-3 text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-md transition duration-150 ease-in-out group" do %>
        <svg class="w-6 h-6 text-gray-500 group-hover:text-red-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        <span class="font-medium group-hover:text-red-600 transition">Sign Out</span>
      <% end %>
    </div>
    <div class="p-6 flex flex-col h-full">
      <h1 class="text-2xl font-semibold text-gray-800 mb-8 tracking-tight">Product Manager</h1>
      
      <nav class="space-y-2">
        <%= link_to admin_products_path, class: "flex items-center gap-3 text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-md transition duration-150 ease-in-out group" do %>
          <svg class="w-6 h-6 text-gray-500 group-hover:text-indigo-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          <span class="font-medium group-hover:text-indigo-600 transition">Products</span>
        <% end %>

        <%= link_to admin_activity_logs_path, class: "flex items-center gap-3 text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-md transition duration-150 ease-in-out group" do %>
          <svg class="w-6 h-6 text-gray-500 group-hover:text-indigo-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium group-hover:text-indigo-600 transition">Activity Logs</span>
        <% end %>
      </nav>
    </div>
  </div>
<% elsif user_signed_in? && current_user.role.to_s == "user" %>
<div class="flex h-screen bg-gray-50">
  <!-- Sidebar -->
  <div class="hidden md:flex md:flex-shrink-0">
    <div class="flex flex-col w-64 border-r border-gray-200 bg-white">
      <!-- Logo/Brand -->
      <div class="flex items-center h-16 px-4 border-b border-gray-200">
        <svg class="h-8 w-8 text-purple-600" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
        </svg>
        <span class="ml-2 text-xl font-bold text-gray-800">ShopApp</span>
      </div>
      
      <!-- Navigation Links -->
      <div class="flex-1 flex flex-col overflow-y-auto">
        <nav class="flex-1 px-2 py-4 space-y-1">
          <%= link_to products_path, class: "group flex items-center px-3 py-3 text-sm font-medium rounded-lg mx-2 #{'bg-purple-50 text-purple-600' if current_page?(products_path)}" do %>
            <svg class="flex-shrink-0 h-6 w-6 text-gray-500 group-hover:text-purple-600 #{'text-purple-600' if current_page?(products_path)}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
            <span class="ml-3">Browse Products</span>
          <% end %>
          
          <%= link_to orders_path, class: "group flex items-center px-3 py-3 text-sm font-medium rounded-lg mx-2 #{'bg-purple-50 text-purple-600' if current_page?(orders_path)}" do %>
            <svg class="flex-shrink-0 h-6 w-6 text-gray-500 group-hover:text-purple-600 #{'text-purple-600' if current_page?(orders_path)}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <span class="ml-3">My Orders</span>
          <% end %>
        </nav>
      </div>
      
      <!-- User Profile & Sign Out -->
      <div class="p-4 border-t border-gray-200">
        <div class="flex items-center">
          <div class="h-10 w-10 rounded-full bg-gradient-to-r from-purple-400 to-indigo-500 flex items-center justify-center text-white font-medium">
            <%= current_user.email.first.upcase %>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-700"><%= current_user.email %></p>
          </div>
        </div>
        <div class="mt-3">
          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, 
              class: "w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
