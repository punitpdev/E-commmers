<div class="variant-fields flex flex-wrap md:flex-nowrap items-center gap-4 p-4 bg-gray-50 border border-gray-200 rounded-lg shadow-sm">
  <%= f.select :option_type, 
      ['Size', 'Color', 'Type'], 
      { prompt: "Select Option Type" }, 
      { class: "w-full md:w-1/3 border border-gray-300 px-3 py-2 rounded" } 
  %>
  <%= f.text_field :value, placeholder: "Value", class: "w-full md:w-1/3 border border-gray-300 px-3 py-2 rounded" %>
  <%= f.hidden_field :_destroy %>
  <button type="button" data-action="click->variants#remove" class="text-red-500 hover:text-red-700 text-sm font-medium transition duration-150">Remove</button>
</div>